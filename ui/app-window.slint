import { GridBox, LineEdit, CheckBox, Button, Slider } from "std-widgets.slint";

export component AppWindow inherits Window {

    //Generate callback
    callback generate_password;
    callback length_password;
    //callback uppercase_password;
    callback lowercase_password;
    callback number_password;
    callback special_password;

    //Generated password variable
    in-out property <string> password;
    in-out property <int> long: 16;
    in-out property <bool> upper: true;
    in-out property <bool> lower: false;
    in-out property <bool> num: false;
    in-out property <bool> spec: false;

    //Main app window layout
    width: 480px;
    height: 480px;
    title: @tr("Password generator");
    icon: @image-url("./icon.png");
    background: grey;

    GridLayout {
        spacing: 20px;
        padding: 10px;
        Row {
            Text {
                height: 60px;
                horizontal-alignment: center;
                vertical-alignment: center;
                text: "Password generator";
                color: darkgrey;
                font-size: 20pt;
                font-family: "Arial";
                colspan: 2;
            }
        }
        Row {
            generated := LineEdit {
                height: 60px;
                placeholder-text: "Password";
                text: password;
            }
            Button {
                height: 60px;
                text: "Copy";
                primary: true;
                clicked => {
                    generated.select-all(); //Select password text
                    generated.copy(); //Copy password to clipboard
                    debug("copied"); //Console text
                }
            }
        }
        Row {
            Button {
                text: "Generate";
                primary: true;
                height: 60px;
                colspan: 2;
                clicked => {
                    generate_password();
                }
            }
        }
        Row {
            Rectangle {
                height: 0px;
            }
        }
        Row {
            Text {
                text: "Password length:";
                height: 30px;
                font-size: 14px;
                font-weight: 100;
                horizontal-alignment: left;
                TextInput {
                    text: long;
                    height: 30px;
                    input-type: number;
                    selection-background-color: black;
                    selection-foreground-color: white;
                    horizontal-alignment: center;
                    edited => {
                        length_password();
                    }
            }
            }
        }
        Row {
            CheckBox {
                text: "Uppercase";
                checked: upper;
                toggled => {
                    self.checked = true;
                    //uppercase_password();
                }
            }
        }
        Row {
            CheckBox {
                text: "Lowercase";
                checked: lower;
                toggled => {
                    lowercase_password();
                }
            }
        }
        Row {
            CheckBox {
                text: "Numbers";
                checked: num;
                toggled => {
                    number_password();
                }
            }
        }
        Row {
            CheckBox {
                text: "Special characters";
                checked: spec;
                toggled => {
                    special_password();
                }
            }
        }
    }
}